{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "{ProjectName}_debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/src/",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "{CompilerPath}/nmc-gdb.exe",
            "miDebuggerServerAddress": "", // адрес устройства /dev/ttySN, где N - номер COM порта
//            "logging": { "engineLogging": true, "trace": true, "traceResponse": true },
            "sourceFileMap": {
                // "<source-path>": "<target-path>"
                "/cygdrive/d/" : "D:/",
                "/cygdrive/c/" : "C:/"           
            },
            
            "setupCommands": [
                { 
                    "description": "Remote debug enable",
                    "text": "-gdb-set debug remote 1",
                    "ignoreFailures": false
               }
            ],
            "preLaunchTask": "{ProjectName}_run"
            
        }
    ]
}